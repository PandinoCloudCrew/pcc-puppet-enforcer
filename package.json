{
  "name": "pcc-puppet-enforcer",
  "version": "0.0.1",
  "description": "",
  "author": "yesid.bocanegra@pandino.co",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "exports": "./index.js",
  "main": "index.js",
  "packageManager": "yarn@3.2.0",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:cov": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config ./test/jest-e2e.json",
    "update-dependencies": "ncu -u",
    "install:prod": "rm -rf node_modules && rm -rf package-lock.json && npm install --production --no-package-lock",
    "prune_me": "npm prune --production && node-prune && rimraf node_modules/rxjs/src && rimraf node_modules/rxjs/bundles && rimraf node_modules/rxjs/_esm*"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.67.0",
    "@nestjs/class-transformer": "0.4.0",
    "@nestjs/class-validator": "0.13.4",
    "@nestjs/common": "8.4.4",
    "@nestjs/core": "8.4.4",
    "@nestjs/platform-express": "8.4.4",
    "@nestjs/platform-fastify": "8.4.4",
    "aws-lambda-fastify": "2.1.2",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "fastify-compress": "4.0.1",
    "nestjs-pino": "2.5.2",
    "pino-http": "6.6.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5"
  },
  "devDependencies": {
    "@aws-sdk/types": "3.55.0",
    "@nestjs/cli": "8.2.5",
    "@nestjs/schematics": "8.0.10",
    "@nestjs/testing": "8.4.4",
    "@types/aws-lambda": "8.10.93",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/node": "17.0.23",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "aws-lambda": "1.0.7",
    "aws-sdk-client-mock": "0.6.2",
    "cross-env": "7.0.3",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "jest-sonar-reporter": "2.0.0",
    "npm-check-updates": "12.5.8",
    "plugin": "0.3.3",
    "prettier": "2.6.2",
    "source-map-support": "0.5.21",
    "supertest": "6.2.2",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "tsconfig-paths": "3.14.1",
    "typescript": "4.6.3"
  },
  "jest": {
    "testResultsProcessor": "jest-sonar-reporter",
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "../node_modules/",
      "../test/",
      "..(module).(ts|js)",
      "..(mock).(ts|js)",
      "src/main.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
